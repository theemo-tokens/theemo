{
  "name": "theemo",
  "description": "The yordle powered theme automator",
  "version": "0.0.9",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://gossi.github.io/theemo/",
  "bugs": "https://github.com/gossi/theemo/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:gossi/theemo.git"
  },
  "main": "dist/index.js",
  "module": "dist/theemo.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "_dts": "tsc -d --declarationDir dist/types --outDir tmp/ src/index.ts; rm -rf tmp/",
    "_esbuild": "yarn clean && node scripts/build.js",
    "build": "yarn clean && rollup -c",
    "start": "rollup -c -w",
    "test": "jest --clearCache && jest",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel 'lint:!(fix)'",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:js": "eslint --ext ts,js src --cache",
    "lint:js:fix": "eslint --ext ts,js src --fix",
    "lint:types": "tsc --noEmit",
    "api": "node scripts/make-docs.js",
    "prepublishOnly": "yarn build",
    "release": "release-it",
    "_vite:dev": "vite",
    "_vite:build": "vite build"
  },
  "bin": {
    "theemo": "bin/theemo.js"
  },
  "dependencies": {
    "color": "^3.1.3",
    "commander": "^8.0.0",
    "dotenv": "^10.0.0",
    "esm": "3.2.25",
    "figma-api": "^1.6.1",
    "lodash.isempty": "^4.4.0",
    "node-fetch": "^2.6.1",
    "style-dictionary": "^3.0.2"
  },
  "devDependencies": {
    "@alex_neo/jest-expect-message": "^1.0.5",
    "@clark/eslint-config-node": "^2.2.0",
    "@clark/eslint-config-node-typescript": "^2.2.0",
    "@microsoft/api-documenter": "^7.13.30",
    "@microsoft/api-extractor": "^7.18.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/color": "^3.0.2",
    "@types/jest": "^26.0.24",
    "@types/jest-expect-message": "^1.0.3",
    "@types/lodash.isempty": "^4.4.6",
    "@types/mock-fs": "^4.13.1",
    "@types/node-fetch": "^2.5.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "esbuild": "^0.12.25",
    "esbuild-jest": "^0.5.0",
    "eslint": "7.30.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.1.0",
    "jsonpath": "^1.1.1",
    "mock-fs": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "release-it": "^14.10.0",
    "release-it-lerna-changelog": "^3.1.0",
    "rollup": "2.53.0",
    "rollup-plugin-esbuild": "^4.5.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
