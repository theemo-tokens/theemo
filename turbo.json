{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "concurrency": "12",
  "tasks": {
    "build": {
      "inputs": ["src/**/*"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "outputs": ["dist/**/*"],
      "dependsOn": ["build"]
    }
  }
}
