{
  "name": "@theemo/svelte",
  "version": "1.0.0",
  "description": "Theemo integration for Svelte",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://theemo.io",
  "bugs": "https://github.com/theemo-tokens/theemo/issues",
  "repository": "https://github.com/theemo-tokens/theemo",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design system",
    "theme",
    "design tokens"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.svelte.d.ts",
      "svelte": "./dist/index.svelte.js"
    },
    "./kit": {
      "types": "./dist/kit.d.ts",
      "default": "./dist/kit.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "lint": "concurrently -g 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently -g 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "tsdown --watch",
    "_test": "vitest run",
    "_test:dev": "vitest"
  },
  "dependencies": {
    "@theemo/theme": "workspace:*",
    "@theemo/vite": "workspace:*"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0",
    "vite": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "@sveltejs/kit": {
      "optional": true
    },
    "vite": {
      "optional": true
    }
  },
  "devDependencies": {
    "@gossi/config-eslint": "^1.1.2",
    "@gossi/config-prettier": "^1.0.1",
    "@sveltejs/kit": "^2.22.2",
    "@theemo-config/tsconfig": "workspace:*",
    "@theemo-config/tsdown": "workspace:*",
    "@theemo-config/typedoc": "workspace:*",
    "concurrently": "^9.1.2",
    "eslint": "^9.30.1",
    "prettier": "^3.5.3",
    "rollup": "^4.44.1",
    "svelte": "^5.34.9",
    "tsdown": "^0.12.9",
    "typescript": "5.8.3",
    "vite": "^6.3.5",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": "^20.11.0 || >=22"
  },
  "release-plan": {
    "semverIncrementAs": {
      "patch": "major",
      "minor": "major"
    }
  }
}
