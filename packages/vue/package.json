{
  "name": "@theemo/vue",
  "version": "1.0.1",
  "description": "TTheemo integration for Vue",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://theemo.io",
  "bugs": "https://github.com/theemo-tokens/theemo/issues",
  "repository": "https://github.com/theemo-tokens/theemo",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design system",
    "theme",
    "design tokens"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "lint": "concurrently -g 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently -g 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "tsdown --watch",
    "_test": "vitest run",
    "_test:dev": "vitest"
  },
  "dependencies": {
    "@theemo/theme": "workspace:*"
  },
  "peerDependencies": {
    "vue": "^3"
  },
  "devDependencies": {
    "@gossi/config-eslint": "^1.3.2",
    "@gossi/config-prettier": "^1.2.0",
    "@theemo-config/tsconfig": "workspace:*",
    "@theemo-config/tsdown": "workspace:*",
    "@theemo-config/typedoc": "workspace:*",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "tsdown": "^0.20.3",
    "typescript": "5.9.3",
    "vue": "^3.5.28"
  },
  "engines": {
    "node": "^20.11.0 || >=22"
  }
}
