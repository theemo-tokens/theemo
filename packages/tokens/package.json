{
  "name": "@theemo/tokens",
  "version": "1.0.0",
  "description": "Theemo Token Definitions and Utilities",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://theemo.io",
  "bugs": "https://github.com/theemo-tokens/theemo/issues",
  "repository": "https://github.com/theemo-tokens/theemo",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design system",
    "theme",
    "design tokens"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "lint": "concurrently -g 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently -g 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "tsdown --watch",
    "test": "vitest run",
    "test:dev": "vitest"
  },
  "dependencies": {
    "colord": "^2.9.3",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@gossi/config-eslint": "^1.1.2",
    "@gossi/config-prettier": "^1.0.1",
    "@theemo-config/tsconfig": "workspace:*",
    "@theemo-config/tsdown": "workspace:*",
    "@theemo-config/typedoc": "workspace:*",
    "@types/lodash.merge": "^4.6.9",
    "concurrently": "^9.1.2",
    "eslint": "^9.30.1",
    "prettier": "^3.5.3",
    "tsdown": "^0.12.9",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": "^20.11.0 || >=22"
  },
  "release-plan": {
    "semverIncrementAs": {
      "patch": "major",
      "minor": "major"
    }
  }
}
