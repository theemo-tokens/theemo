{
  "name": "@theemo/build",
  "version": "1.1.0",
  "description": "Theme Builder",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://theemo.io",
  "bugs": "https://github.com/theemo-tokens/theemo/issues",
  "repository": "https://github.com/theemo-tokens/theemo",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design system",
    "theme",
    "design tokens"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "lint": "concurrently -g 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently -g 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "tsdown --watch",
    "_test": "vitest run",
    "_test:dev": "vitest"
  },
  "dependencies": {
    "lightningcss": "^1.29.3",
    "read-pkg": "^9.0.0",
    "write-package": "^7.1.0"
  },
  "devDependencies": {
    "@gossi/config-eslint": "^1.3.2",
    "@gossi/config-prettier": "^1.2.0",
    "@theemo-config/tsconfig": "workspace:*",
    "@theemo-config/tsdown": "workspace:*",
    "@theemo-config/typedoc": "workspace:*",
    "@theemo/theme": "workspace:*",
    "@types/node": "^22.16.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "tsdown": "^0.12.9",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": "^20.11.0 || >=22"
  }
}
