{
  "name": "@theemo/core",
  "version": "0.0.1",
  "description": "Theemo Core Definitions and Utilities",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://theemo.io",
  "bugs": "https://github.com/theemo-tokens/theemo/issues",
  "repository": "https://github.com/theemo-tokens/theemo",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design system",
    "theme",
    "design tokens"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "concurrently -r 'npm:build:*'",
    "build:js": "swc ./src -d ./dist",
    "build:types": "tsc --emitDeclarationOnly",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "concurrently -r 'npm:start:*'",
    "start:js": "swc ./src -d ./dist -w",
    "start:types": "tsc --emitDeclarationOnly -w"
  },
  "dependencies": {
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@gossi/config-eslint": "^0.4.0",
    "@gossi/config-prettier": "^0.4.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.67",
    "@types/lodash.merge": "^4.6.7",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "prettier": "^2.8.5",
    "typescript": "^5.1.6"
  }
}
