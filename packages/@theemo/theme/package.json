{
  "name": "@theemo/theme",
  "private": true,
  "version": "0.0.1",
  "description": "Theemo Theme Runtine",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://theemo.io",
  "bugs": "https://github.com/theemo-tokens/theemo/issues",
  "repository": "https://github.com/theemo-tokens/theemo",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design system",
    "theme"
  ],
  "files": [
    "dist"
  ],
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "_lint": "concurrently -g 'npm:lint:*(!fix)'",
    "_lint:fix": "concurrently -g 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "tsup --watch",
    "_test": "vitest run --browser.headless --browser.provider=webdriverio",
    "test": "vitest run",
    "test:ui": "vitest"
  },
  "dependencies": {
    "@theemo/tokens": "workspace:*",
    "type-fest": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.26.10",
    "@gossi/config-eslint": "^0.14.0",
    "@gossi/config-prettier": "^0.10.0",
    "@swc/cli": "0.7.3",
    "@swc/core": "1.11.21",
    "@vitest/browser": "3.1.1",
    "@vitest/coverage-istanbul": "3.1.1",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "forest-theme": "workspace:*",
    "ocean-theme": "workspace:*",
    "prettier": "^3.5.3",
    "tsup": "8.4.0",
    "typescript": "5.8.3",
    "vitest": "3.1.1",
    "webdriverio": "^9.12.6"
  }
}
