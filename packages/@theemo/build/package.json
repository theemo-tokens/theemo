{
  "name": "@theemo/build",
  "version": "0.2.4",
  "description": "Theme Builder",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://theemo.io",
  "bugs": "https://github.com/theemo-tokens/theemo/issues",
  "repository": "https://github.com/theemo-tokens/theemo",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design system",
    "theme",
    "design tokens"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "lint": "concurrently -g 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently -g 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "tsup --watch",
    "test": "vitest run",
    "_test:dev": "vitest"
  },
  "dependencies": {
    "read-pkg": "^9.0.0",
    "write-package": "^7.1.0"
  },
  "devDependencies": {
    "@gossi/config-eslint": "^0.13.0",
    "@gossi/config-prettier": "^0.9.1",
    "@types/node": "^22.10.1",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.1",
    "glob": "^11.0.0",
    "memfs": "^4.14.1",
    "prettier": "^3.3.3",
    "tsup": "8.3.5",
    "typescript": "5.7.2",
    "vitest": "2.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
