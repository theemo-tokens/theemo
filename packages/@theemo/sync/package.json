{
  "name": "@theemo/sync",
  "version": "0.0.1",
  "description": "Theemo Sync",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://theemo.io",
  "bugs": "https://github.com/theemo-tokens/theemo/issues",
  "repository": "https://github.com/theemo-tokens/theemo",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design system",
    "theme",
    "design tokens"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "concurrently -r 'npm:build:*'",
    "build:js": "swc ./src -d ./dist",
    "build:types": "tsc --emitDeclarationOnly --project tsconfig.dts.json",
    "lint": "concurrently -g 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently -g 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "concurrently -r 'npm:start:*'",
    "start:js": "swc ./src -d ./dist -w",
    "start:types": "tsc --emitDeclarationOnly --project tsconfig.dts.json -w",
    "test": "vitest run",
    "test:dev": "vitest"
  },
  "dependencies": {
    "@theemo/core": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/eslint-parser": "^7.22.5",
    "@gossi/config-eslint": "^0.4.0",
    "@gossi/config-prettier": "^0.4.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.67",
    "@theemo/fixtures": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "prettier": "^2.8.5",
    "typescript": "^5.1.6",
    "vitest": "^0.32.4"
  }
}
