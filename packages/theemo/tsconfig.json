{
  "include": [
    "src",
    "types"
  ],
  "compilerOptions": {
    "target": "esnext",

    "baseUrl": "src/",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "types/*",
        "node_modules/*"
      ]
    },

    "esModuleInterop": true,
    "isolatedModules": true,

    "declaration": true,
    "declarationDir": "./dist",
    "downlevelIteration": true,
    "sourceMap": true,

    "importHelpers": true,
    
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,

    "skipLibCheck": true
  }
}