{
  "name": "theemo",
  "description": "The yordle powered theme automator",
  "version": "0.0.9",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://gossi.github.io/theemo/",
  "keywords": [
    "figma",
    "design tokens",
    "automation",
    "css"
  ],
  "bugs": "https://github.com/gossi/theemo/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:gossi/theemo.git"
  },
  "main": "dist/index.js",
  "module": "dist/theemo.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "dts": "tsc --emitDeclarationOnly",
    "start": "yarn build:rollup -w",
    "build": "yarn clean && yarn build:rollup",
    "build:rollup": "rollup -c",
    "build:swc": "yarn swc src/ --out-dir dist/",
    "test": "jest --clearCache && NODE_OPTIONS=--experimental-vm-modules jest",
    "coverage": "yarn test --coverage=true",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel 'lint:!(fix)'",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:js": "eslint --ext ts,js src --cache",
    "lint:js:fix": "eslint --ext ts,js src --fix",
    "lint:types": "tsc --noEmit",
    "api": "node scripts/make-docs.js",
    "prepublishOnly": "yarn build",
    "prepack": "yarn dts",
    "release": "release-it",
    "_esbuild": "yarn clean && node scripts/build.js",
    "_vite:dev": "vite",
    "_vite:build": "vite build"
  },
  "bin": {
    "theemo": "bin/theemo.js"
  },
  "dependencies": {
    "color": "^4.2.1",
    "commander": "^9.0.0",
    "dotenv": "^16.0.0",
    "esm": "3.2.25",
    "figma-api": "^1.9.2",
    "lodash.isempty": "^4.4.0",
    "node-fetch": "~3.2.3",
    "style-dictionary": "^3.7.0"
  },
  "devDependencies": {
    "@alex_neo/jest-expect-message": "^1.0.5",
    "@clark/eslint-config-node": "^2.2.0",
    "@clark/eslint-config-node-typescript": "^2.2.0",
    "@jest/globals": "^27.5.1",
    "@microsoft/api-documenter": "^7.15.3",
    "@microsoft/api-extractor": "^7.19.4",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.155",
    "@swc/jest": "^0.2.20",
    "@types/color": "^3.0.3",
    "@types/jest": "^27.4.1",
    "@types/jest-expect-message": "^1.0.3",
    "@types/lodash.isempty": "^4.4.6",
    "@types/mock-fs": "^4.13.1",
    "@types/node-fetch": "~3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "chokidar": "^3.5.3",
    "esbuild": "^0.14.26",
    "esbuild-jest": "^0.5.0",
    "eslint": "7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jsonpath": "^1.1.1",
    "mock-fs": "^5.1.2",
    "npm-run-all": "^4.1.5",
    "release-it": "^14.12.5",
    "release-it-lerna-changelog": "^4.0.1",
    "rollup": "2.70.1",
    "rollup-plugin-esbuild": "^4.8.2",
    "typescript": "^4.6.2",
    "vite": "^2.8.6"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      }
    },
    "git": {
      "tagName": "${name}@${version}"
    },
    "github": {
      "release": true,
      "releaseName": "theemo@${version}",
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "volta": {
    "extends": "../../package.json"
  }
}
