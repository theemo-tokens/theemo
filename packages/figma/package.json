{
  "name": "@theemo/figma",
  "version": "1.0.0",
  "description": "Theemo Figma Integration",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://theemo.io",
  "bugs": "https://github.com/theemo-tokens/theemo/issues",
  "repository": "https://github.com/theemo-tokens/theemo",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design system",
    "theme",
    "design tokens",
    "figma",
    "theemo"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "lint": "concurrently -g 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently -g 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "tsdown --watch",
    "test": "vitest run",
    "test:dev": "vitest"
  },
  "dependencies": {
    "@theemo/tokens": "workspace:*",
    "@theemo/sync": "workspace:*",
    "colord": "^2.9.3",
    "figma-api": "^1.11.0",
    "lodash.isempty": "^4.4.0",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@babel/core": "7.27.4",
    "@babel/eslint-parser": "7.27.5",
    "@gossi/config-eslint": "^0.14.0",
    "@gossi/config-prettier": "^0.10.0",
    "@theemo-config/tsconfig": "workspace:*",
    "@theemo-config/tsdown": "workspace:*",
    "@theemo-config/typedoc": "workspace:*",
    "@types/lodash.isempty": "^4.4.9",
    "@types/lodash.merge": "^4.6.9",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "prettier": "^3.5.3",
    "tsdown": "^0.12.8",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "release-plan": {
    "semverIncrementAs": {
      "patch": "major",
      "minor": "major"
    }
  }
}
