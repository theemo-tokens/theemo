{
  "name": "@theemo/theme",
  "version": "1.0.1",
  "description": "Theemo Theme Runtine",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://theemo.io",
  "bugs": "https://github.com/theemo-tokens/theemo/issues",
  "repository": "https://github.com/theemo-tokens/theemo",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design system",
    "theme"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "lint": "concurrently -g 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently -g 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "tsdown --watch",
    "test": "vitest run",
    "test:dev": "vitest"
  },
  "dependencies": {
    "type-fest": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.29.0",
    "@gossi/config-eslint": "^1.3.2",
    "@gossi/config-prettier": "^1.2.0",
    "@theemo-config/tsconfig": "workspace:*",
    "@theemo-config/tsdown": "workspace:*",
    "@theemo-config/typedoc": "workspace:*",
    "@theemo-playground/ocean-theme": "workspace:*",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "tsdown": "^0.12.9",
    "typescript": "5.9.3",
    "vitest": "3.2.4",
    "webdriverio": "^9.21.0"
  },
  "engines": {
    "node": "^20.11.0 || >=22"
  }
}
