{
  "name": "@theemo/theme",
  "version": "1.0.0",
  "description": "Theemo Theme Runtine",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "homepage": "https://theemo.io",
  "bugs": "https://github.com/theemo-tokens/theemo/issues",
  "repository": "https://github.com/theemo-tokens/theemo",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design system",
    "theme"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "lint": "concurrently -g 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently -g 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "start": "tsdown --watch",
    "test": "vitest run",
    "test:dev": "vitest"
  },
  "dependencies": {
    "type-fest": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.27.7",
    "@gossi/config-eslint": "^0.14.0",
    "@gossi/config-prettier": "^0.10.0",
    "@theemo-config/tsconfig": "workspace:*",
    "@theemo-config/tsdown": "workspace:*",
    "@theemo-config/typedoc": "workspace:*",
    "@theemo-playground/ocean-theme": "workspace:*",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "prettier": "^3.5.3",
    "tsdown": "^0.12.9",
    "typescript": "5.8.3",
    "vitest": "3.2.4",
    "webdriverio": "^9.16.2"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "release-plan": {
    "semverIncrementAs": {
      "patch": "major",
      "minor": "major"
    }
  }
}
